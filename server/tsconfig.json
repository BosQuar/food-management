{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "..",
    "typeRoots": ["./types", "../node_modules/@types"]
  },
  "include": ["./**/*.ts", "./types/**/*.d.ts", "../shared/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
