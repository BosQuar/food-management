{
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node *)",
      "Bash(mkdir *)",
      "Bash(mkdir:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(pkill *)",
      "Bash(curl:*)",
      "Bash(docker-compose build:*)",
      "Bash(docker compose build:*)",
      "Bash(docker compose:*)",
      "WebSearch"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\""
          }
        ]
      }
    ]
  }
}
